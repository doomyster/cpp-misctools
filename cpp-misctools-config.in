#!/bin/sh

prefix=@CMAKE_INSTALL_PREFIX@
usage="cpp-misctools-config [--prefix] [--version] [--cflags] [--libs]"

if test $# -eq 0; then
	echo "${usage}" 1>&2
	exit 1
fi

while test $# -gt 0; do
	case $1 in
	--prefix)
		echo ${prefix}
		;;
	
	--version)
		echo @VERSION@
		;;
	--cflags)
		echo -I${prefix}/include/cpp-misctools @PCRECPP_INCLUDE_DIR@ @SQLITE3_INCLUDE_DIR@ @LIBB64_INCLUDE_DIR@
		;;
	--libs)
		echo -L${prefix}/lib/ -Wl,-rpath,${prefix}/lib -lcpp-misctools @PCRECPP_LIBS@ @SQLITE3_LIBS@
		;;
	*)
		echo "${usage}" 1>&2
		exit 1
		;;
	esac
	shift
done

