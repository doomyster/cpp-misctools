#!/bin/sh

# This file won't be generated by CMake, because I don't know how to do it properly.
# Any help would be appreciated (must work with cmake AND autotools).

prefix=@prefix@
usage="cpp-misctools-config [--prefix] [--version] [--cflags] [--libs]"

if test $# -eq 0; then
	echo "${usage}" 1>&2
	exit 1
fi

while test $# -gt 0; do
	case $1 in
	--prefix)
		echo ${prefix}
		;;
	
	--version)
		echo @VERSION@
		;;
	--cflags)
		echo -I@prefix@/include/cpp-misctools @PCRECPP_CFLAGS@ @SQLITE3_CFLAGS@
		;;
	--libs)
		echo -L@prefix@/lib/ -Wl,-rpath,@prefix@/lib -lcpp-misctools @PCRECPP_LIBS@ @SQLITE3_LIBS@
		;;
	*)
		echo "${usage}" 1>&2
		exit 1
		;;
	esac
	shift
done

