#!/bin/sh

prefix=@prefix@
usage="c++-misctools-config [--prefix] [--version] [--cflags] [--libs]"

if test $# -eq 0; then
	echo "${usage}" 1>&2
	exit 1
fi

while test $# -gt 0; do
	case $1 in
	--prefix)
		echo ${prefix}
		;;
	
	--version)
		echo @VERSION@
		;;
	--cflags)
		echo -I@prefix@/include/c++-misctools @PCRECPP_CFLAGS@
		;;
	--libs)
		echo -L@prefix@/lib/ -Wl,-rpath,@prefix@/lib -lc++-misctools @PCRECPP_LIBS@
		;;
	*)
		echo "${usage}" 1>&2
		exit 1
		;;
	esac
	shift
done

